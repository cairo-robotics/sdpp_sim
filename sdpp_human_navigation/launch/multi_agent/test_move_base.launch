<launch>
    <arg name="move_forward_only" default="true"/>
    <arg name="multi_bot" default="human_0" />

    <group ns="$(arg multi_bot)">
        <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
            <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
            <rosparam file="$(find sdpp_human_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
            <rosparam file="$(find sdpp_human_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
            <rosparam file="$(find sdpp_human_navigation)/param/local_costmap_params.yaml" command="load" />
            <rosparam file="$(find sdpp_human_navigation)/param/global_costmap_params.yaml" command="load" />
            <rosparam file="$(find sdpp_human_navigation)/param/move_base_params.yaml" command="load" />
            <rosparam file="$(find sdpp_human_navigation)/param/dwa_local_planner_params.yaml" command="load" />
            <remap from="/$(arg multi_bot)/map" to="/map"/>

            <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />

            <param name="/$(arg multi_bot)/move_base/local_costmap/robot_base_frame" type="str" value="$(arg multi_bot)/base_link" />
            <param name="/$(arg multi_bot)/move_base/global_costmap/robot_base_frame" type="str" value="$(arg multi_bot)/base_link" />
        </node>
    </group>
</launch>